  },
  "devDependencies": {
    "cypress": "3.8.1",
    "start-server-and-test": "1.10.6"
  },
  "scripts": {
    "tsnode": "ts-node -O '{\"isolatedModules\": false, \"module\": \"commonjs\" }'",
    "tsnode:test": "NODE_ENV=test ts-node -O '{\"isolatedModules\": false, \"module\": \"commonjs\" }'",
    "db:seed:dev": "cp src/data/dev-seed.json src/data/database.json",
    "db:seed:test": "cp src/data/test-seed.json src/data/database.test.json",
    "db:updatedevseed": "cp src/data/test-seed.json src/data/dev-seed.json",
    "postdb:updatedevseed": "yarn db:seed:dev",
    "cypress:open": "cypress open",
    "cypress:run": "cypress run",
    "cypress:run:record": "cypress run --record",
    "prestart:dev": "yarn db:seed:dev",
    "start": "react-scripts start",
    "start:dev": "NODE_ENV=development yarn start:api & yarn start",
    "start:api": "yarn tsnode --files src/app.ts",
    "start:api:watch": "nodemon --exec yarn tsnode --watch 'src/app.ts' --watch 'src/backend' src/app.ts",
    "build": "react-scripts build",
    "pretest": "yarn db:seed:test",
    "test": "react-scripts test --runInBand",
    "test:ci": "react-scripts test --watch false --runInBand",
    "eject": "react-scripts eject",
    "start:server-and-api": "start-test start:api 3001 start",
    "start:server-and-api:watch": "start-test start:api:watch 3001 start",
    "test:e2e": "NODE_ENV=test start-test start:server-and-api 3000 cypress:run",
    "test:e2e:ci": "NODE_ENV=test yarn start:server-and-api",
    "test:e2e:api": "NODE_ENV=test start-test start:server-and-api:watch 3000 cypress:open"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "jest": {
    "watchPathIgnorePatterns": [
      "<rootDir>/src/data/database.json",
      "<rootDir>/src/data/database.test.json",
      "<rootDir>/src/data/test-seed.json",
      "<rootDir>/src/data/dev-seed.json"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
